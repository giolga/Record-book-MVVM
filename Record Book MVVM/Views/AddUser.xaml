<Window x:Class="Record_Book_MVVM.Views.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Record_Book_MVVM.Views"
        mc:Ignorable="d"
        Title="AddUser" Height="450" Width="400">
    <Grid>
        <Label Content="Name" Margin="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Text="{Binding Name}" Width="200" Margin="25, 50" VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="#e0e0e0" BorderThickness="1"/>

        <Label Content="Email" Margin="25, 100" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <TextBox Text="{Binding Email}" Width="200" Margin="25, 125" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="1" BorderBrush="#e0e0e0"/>

        <Button Height="30" Command="{Binding AddUserCommand}" Content="Add" Width="70"  VerticalContentAlignment="Center" Padding="5" Margin="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderThickness="1" BorderBrush="#E0E0E0" />
    </Grid>
</Window>
